<odoo>
  <template id="report_cloth_shop_order_document">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <div class="page">
          <h2>Order Report</h2>
          <p><strong>Order Ref:</strong> <t t-esc="o.order_name"/></p>
          <p><strong>Customer:</strong> <t t-esc="o.customer_name"/></p>
          <p><strong>Date:</strong> <t t-esc="o.order_date"/></p>

          <table class="table table-sm mt32">
            <thead>
              <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="o.order_line_ids" t-as="line">
                <tr>
                  <td><t t-esc="line.product_name"/></td>
                  <td><t t-esc="line.quantity"/></td>
                  <td><t t-esc="line.price"/></td>
                  <td><t t-esc="line.price * line.quantity"/></td>
                </tr>
              </t>
            </tbody>
          </table>

          <p class="mt16"><strong>Total:</strong> <t t-esc="o.total_price"/></p>
        </div>
      </t>
    </t>
  </template>
</odoo>
