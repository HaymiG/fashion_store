<odoo>
  <template id="contact_us_page" name="Contact Us Page">
    <t t-call="website.layout">
      <div class="container">
        <!-- Page Title -->
        <h1 class="text-center mb-4">Get in Touch</h1>

        <div class="row">
          <!-- Contact Info -->
          <div class="col-md-6">
            <h4>Contact Details</h4>
            <p><strong>Phone:</strong> +251 912 345 678</p>
            <p><strong>Email:</strong> fashionstore@gmail.com</p>
            <p><strong>Address:</strong> Addis Ababa, Ethiopia</p>
          </div>

          <!-- Google Map -->
          <div class="col-md-6">
            <h4>Our Location</h4>
            <div style="border:1px solid #ccc; overflow:hidden; border-radius:10px;">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3952.371584118313!2d38.770436614328364!3d8.980603892099652!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x164b85a49bd9b1e3%3A0x5d74fdff6e4a0afc!2sAddis%20Ababa!5e0!3m2!1sen!2set!4v1629876543210"
                width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
              </iframe>
            </div>
          </div>
        </div>

        <hr class="my-5"/>

        <!-- Contact Form -->
        <div class="row">
          <div class="col-12">
            <h4>Send Us a Message</h4>
            <form method="post" action="/contactus">
              <div class="mb-3">
                <label>Your Name</label>
                <input type="text" name="name" required="required" class="form-control"/>
              </div>
              <div class="mb-3">
                <label>Your Email</label>
                <input type="email" name="email" required="required" class="form-control"/>
              </div>
              <div class="mb-3">
                <label>Your Message</label>
                <textarea name="message" rows="4" class="form-control" required="required"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Send</button>
            </form>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
