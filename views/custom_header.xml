<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="custom_fashionstore_header" inherit_id="website.layout" name="Custom Minimalist Header">
    <xpath expr="//header" position="replace">
      <header id="custom-header">
        <nav class="navbar navbar-expand-lg container-fluid">
          <!-- Logo -->
          <a class="navbar-brand" href="/" aria-label="Home">
            <img src="/shop/static/src/img/logo.png" alt="Fashion Store Logo" class="img-fluid logo-img"/>
          </a>

          <!-- Mobile Toggle -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#headerNavbar"
                  aria-controls="headerNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Navigation Links -->
          <div class="collapse navbar-collapse" id="headerNavbar">
            <ul class="navbar-nav mx-auto">
              <li class="nav-item">
                <a t-attf-class="nav-link #{'active' if request.httprequest.path == '/' else ''}" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a t-attf-class="nav-link #{'active' if '/product' in request.httprequest.path else ''}" href="/product">Products</a>
              </li>
              <li class="nav-item">
                <a t-attf-class="nav-link #{'active' if '/about' in request.httprequest.path else ''}" href="/about">About Us</a>
              </li>
              <li class="nav-item">
                <a t-attf-class="nav-link #{'active' if '/contact' in request.httprequest.path else ''}" href="/contact">Contact</a>
              </li>
            </ul>

            <!-- Right Icons -->
            <div class="header-icons d-flex align-items-center gap-3">
              <a t-attf-class="nav-icon #{'active' if '/shop/cart' in request.httprequest.path else ''}" href="/shop/cart" aria-label="Cart">
                <i class="fa fa-shopping-cart fa-lg"></i>
                <span class="badge bg-dark position-absolute top-0 start-100 translate-middle" t-if="cart_count">
                  <t t-esc="cart_count"/>
                </span>
              </a>
              <a t-attf-class="nav-icon #{'active' if '/my/home' in request.httprequest.path else ''}" href="/my/home" aria-label="Account">
                <i class="fa fa-user-o fa-lg"></i>
              </a>
              <a t-attf-class="nav-icon #{'active' if '/shop/wishlist' in request.httprequest.path else ''}" href="/shop/wishlist" aria-label="Wishlist">
                <i class="fa fa-heart-o fa-lg"></i>
                <span class="badge bg-dark position-absolute top-0 start-100 translate-middle" t-if="wishlist_count">
                  <t t-esc="wishlist_count"/>
                </span>
              </a>
            </div>
          </div>
        </nav>
      </header>
    </xpath>
  </template>
</odoo>
