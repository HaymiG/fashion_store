<odoo>
  <!-- Tree View -->
  <record id="view_contact_message_tree" model="ir.ui.view">
      <field name="name">shop.contact.message.tree</field>
      <field name="model">shop.contact.message</field>
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <field name="email"/>
              <field name="phone"/>
              <field name="date"/>
          </tree>
      </field>
  </record>

  <!-- Form View -->
  <record id="view_contact_message_form" model="ir.ui.view">
      <field name="name">shop.contact.message.form</field>
      <field name="model">shop.contact.message</field>
      <field name="arch" type="xml">
          <form>
              <sheet>
                  <group>
                      <field name="name"/>
                      <field name="email"/>
                      <field name="phone"/>
                      <field name="message"/>
                      <field name="date"/>
                  </group>
              </sheet>
          </form>
      </field>
  </record>

  <!-- Action -->
  <record id="action_contact_messages" model="ir.actions.act_window">
      <field name="name">Contact Messages</field>
      <field name="res_model">shop.contact.message</field>
      <field name="view_mode">tree,form</field>
  </record>

  <!-- Parent Menu -->
  <menuitem id="menu_shop_root" name="Shop"/>

  <!-- Contact Messages Menu -->
  <menuitem id="menu_contact_messages" 
            name="Contact Messages" 
            parent="menu_cloth_shop_root"
            action="action_contact_messages"/>
</odoo>
